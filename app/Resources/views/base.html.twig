<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}Rate a book{% endblock %}</title>
        {% block stylesheets %}
            {% stylesheets
                'https://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css'
                '../app/Resources/public/css/screen.css' %}
        <link href="{{ asset_url }}" type="text/css" rel="stylesheet"/>
        {% endstylesheets %}
        {% endblock %}


        {% block javascript %}
            {% javascripts
                'https://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js'
            %}
            <script type="text/javascript" src="{{ asset_url }}"></script>
            {% endjavascripts %}
        {% endblock %}

        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    </head>
    <body>
    <div class="container">
        <nav class="navbar navbar-default">
            <div class="container-fluid">
                <button type="button" class="navbar-toggle collapsed"
                        data-toggle="collapse"
                        data-target="#bs-example-navbar-collapse-1">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    12
                    Advanced Web Development Symfony Configuration and Templating
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="#">Rate a book</a>
                <div class="collapse navbar-collapse">
                    <ul class="nav navbar-nav navbar-right">
                        <li><a href="{{ path('index', {'page':1}) }}">Home</a></li>
                        {#<li><a href="#">Contact</a></li>#}
                        {% if not is_granted("ROLE_USER") %}
                            <li><a href="{{ path('user_login') }}">Login</a></li>
                        {% else %}
                            <li><a href="{{ path('blogger_author') }}">My posts</a></li>
                            <li><a href="{{ path('blogger_book_create') }}">Add book</a></li>
                            <li><a href="{{ path('user_logout') }}">Logout</a></li>
                            <li><a href="#">Logged in as {{ app.user.username }}</a></li>
                        {% endif %}

                    </ul> </div>
            </div>
        </nav>
        <div class="row">
            <section class="col-md-8">
                {% block body %}{% endblock %}
            </section>

            <section class="col-md-4">
                {% block sidebar %}{% endblock %}
            </section>
        </div>
        <br>
        <div class="footer">
            {% block footer %}
                <p>Rate a book</p>
            {% endblock %} </div>
    </div>
    </body>
</html>
