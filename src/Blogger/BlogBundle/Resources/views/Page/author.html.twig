{% extends 'BloggerBlogBundle::layout.html.twig' %}

{% block title %} My Posts {% endblock %}

{% block body %}
    <h1>Welcome to your central Post Hub!</h1>
    {% for post in blogposts %}
        <article>
            <h2><a href="{{ path('blogger_post_view', {id : post.id}) }}">
                    {{ post.title | title }}</a></h2>

            <p>{{ post.content | nl2br }}</p>

            <p>
                <small>Created by {{ post.user }} at {{ post.published | date('H:i d/m/y') }}</small>
            </p>
        </article>
    {% endfor %}
{% endblock %}